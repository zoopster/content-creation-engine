# Content Creation Engine - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== LLM Provider API Keys =====
# At least one provider API key is required for the system to function

# Anthropic Claude API Key (https://console.anthropic.com/)
# Required for: Research Agent, Creation Agent, Social Content
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (https://platform.openai.com/api-keys)
# Optional: Alternative provider for content generation
OPENAI_API_KEY=your_openai_api_key_here


# ===== Model Configuration =====
# Path to custom model configuration file (optional)
# If not set, uses default configuration from core/models/config.py
MODEL_CONFIG_PATH=

# Default provider to use (anthropic or openai)
# Overrides the default in model config
DEFAULT_PROVIDER=anthropic

# Default model to use for agents without specific configuration
# Anthropic: claude-sonnet-4-20250514, claude-3-5-haiku-20241022
# OpenAI: gpt-4o, gpt-4o-mini
DEFAULT_MODEL=claude-sonnet-4-20250514


# ===== API Server Configuration =====
# FastAPI server settings

# API host (use 0.0.0.0 to allow external connections)
API_HOST=127.0.0.1

# API port
API_PORT=8000

# API environment (development, staging, production)
API_ENV=development

# Enable API debug mode (detailed error messages)
API_DEBUG=true

# API log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
API_LOG_LEVEL=INFO


# ===== CORS Configuration =====
# Comma-separated list of allowed origins for CORS
# Add your frontend URL(s) here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000


# ===== Output Configuration =====
# Directory for generated content output
OUTPUT_DIR=./output

# Maximum file size for generated documents (MB)
MAX_OUTPUT_FILE_SIZE=50


# ===== Workflow Configuration =====
# Job expiry time in hours (how long to keep completed workflow results)
JOB_EXPIRY_HOURS=24

# Maximum concurrent workflow executions
MAX_CONCURRENT_WORKFLOWS=5

# Workflow timeout in seconds (max time for a single workflow)
WORKFLOW_TIMEOUT=300


# ===== Quality Gates =====
# Enable/disable quality gate validation (true/false)
ENABLE_QUALITY_GATES=true

# Quality threshold (0.0 to 1.0) - minimum score to pass quality gates
QUALITY_THRESHOLD=0.7

# Maximum retries for failed quality gates
MAX_QUALITY_RETRIES=3


# ===== Brand Voice Configuration =====
# Enable brand voice validation (true/false)
ENABLE_BRAND_VOICE=true

# Strict mode for brand voice (fail on minor violations)
BRAND_VOICE_STRICT_MODE=false


# ===== Research Agent Configuration =====
# Enable web search for research (requires implementation)
ENABLE_WEB_SEARCH=false

# Maximum sources to include in research briefs
MAX_RESEARCH_SOURCES=10

# Research quality threshold (0.0 to 1.0)
RESEARCH_QUALITY_THRESHOLD=0.8


# ===== Production Agent Configuration =====
# Enable document watermarks (true/false)
ENABLE_WATERMARKS=false

# Default document template set
DEFAULT_TEMPLATE_SET=default

# DPI for generated images in documents
DOCUMENT_IMAGE_DPI=300


# ===== Rate Limiting =====
# Enable rate limiting for API requests (true/false)
ENABLE_RATE_LIMITING=false

# Maximum API requests per minute per client
RATE_LIMIT_PER_MINUTE=60


# ===== Monitoring & Logging =====
# Enable detailed request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Enable performance metrics collection
ENABLE_METRICS=false

# Metrics export endpoint (optional)
METRICS_ENDPOINT=


# ===== Security =====
# API key for authenticated endpoints (optional)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=

# Enable authentication for API endpoints (true/false)
ENABLE_API_AUTH=false

# Allowed IP addresses (comma-separated, leave empty for no restriction)
ALLOWED_IPS=


# ===== Development & Testing =====
# Use mock LLM responses for testing (no API calls)
USE_MOCK_LLM=false

# Mock response delay in seconds (simulate API latency)
MOCK_RESPONSE_DELAY=1.0

# Enable verbose debug output for agents
VERBOSE_AGENT_OUTPUT=false


